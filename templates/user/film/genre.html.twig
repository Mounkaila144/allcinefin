{% extends 'user.html.twig' %}

{% block title %}Hello MainController!{% endblock %}

{% block body %}
    <div class="container-scroller film bg-black ">

        <div class="row ">
            {%for film in data %}

                <div class="col">

                    <div class="card movie_card">

                        <ul>
                            <li><a href="{{ path('user_film_action', {'id': film.id}) }}">{{ film.name }}</a></li>
                        </ul>
                        </div>

                    </div>

                </div>
            {% endfor%}

        </div>

    </div>
{% endblock %}
