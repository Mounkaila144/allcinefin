{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Panier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>

            <tr>
                <th>Panier</th>
                <td>
                    {% for panier in commande.panier.items %}
                        <ul>
                            <li>{{ panier.quantity }} {{panier.nom}} {{ panier.price }} CFA</li>
                        </ul>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Total</th>
                <td style="color: orange">{{ commande.panier.cartTotal }} CFA</td>
            </tr>

        </tbody>
    </table>

    {{ include('panier/_delete_form.html.twig') }}
{% endblock %}
