<form method="post" action="{{ path('admin_manga_delete', {'id': manga.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ manga.id) }}">
    <button type="submit" class="btn btn-primary me-2">Suprimer</button>
</form>
